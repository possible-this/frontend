{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [
				{
					"name": "Brand",
					"slug": "brand",
					"colors": [
						"#FFFFFF",
						"#00E4FF"
					]
				},
				{
					"name": "Brand Accent",
					"slug": "brand-accent",
					"colors": [
						"#FFFFFF",
						"#8BF7FF"
					]
				},
				{
					"name": "Grayscale",
					"slug": "grayscale",
					"colors": [
						"#000000",
						"#fff"
					]
				}
			],
			"gradients": [
				{
					"name": "Brand Glow",
					"slug": "brand-glow",
					"gradient": "radial-gradient(circle, #00E4FF 0%, #FFFFFF 100%)"
				},
				{
					"name": "Brand Alt Stream",
					"slug": "brand-alt-stream",
					"gradient": "linear-gradient(90deg, #A1CCD0 0%, #FFFFFF 100%)"
				},
				{
					"name": "Contrast Dark",
					"slug": "contrast-dark",
					"gradient": "linear-gradient(135deg, #000000, #4E5152)"
				}
			],
			"palette": [
				{
					"name": "Base (White)",
					"slug": "base",
					"color": "#FFFFFF"
				},
				{
					"name": "Brand",
					"slug": "brand",
					"color": "#00E4FF"
				},
				{
					"name": "Brand Accent",
					"slug": "brand-accent",
					"color": "#8BF7FF"
				},
				{
					"name": "Brand Alt",
					"slug": "brand-alt",
					"color": "#A1CCD0"
				},
				{
					"name": "Brand Alt Accent",
					"slug": "brand-alt-accent",
					"color": "#366F74"
				},
				{
					"name": "Contrast (Black)",
					"slug": "contrast",
					"color": "#000000"
				},
				{
					"name": "Contrast Accent (Light Grey)",
					"slug": "contrast-accent",
					"color": "#CDD1D1"
				},
				{
					"name": "Base Accent (Dark Grey)",
					"slug": "base-accent",
					"color": "#4E5152"
				},
				{
					"name": "Tint (Light Aqua)",
					"slug": "tint",
					"color": "#E9F7F8"
				},
				{
					"name": "Border Base",
					"slug": "border-base",
					"color": "#A3B4B5"
				},
				{
					"name": "Border Contrast",
					"slug": "border-contrast",
					"color": "#284649"
				}
			],
			"link": true
		},
		"custom": {
			"fontWeight": {
				"thin": 100,
				"extra-light": 200,
				"light": 300,
				"regular": 400,
				"medium": 500,
				"semi-bold": 600,
				"bold": 700,
				"extra-bold": 800,
				"black": 900
			},
			"lineHeight": {
				"none": 1,
				"tight": 1.1,
				"snug": 1.2,
				"body": 1.5,
				"relaxed": 1.625,
				"loose": 2
			}
		},
		"layout": {
			"contentSize": "740px",
			"wideSize": "1260px"
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"name": "Glow Brand",
					"slug": "glow-brand",
					"shadow": "0 0 10px 0 rgba(0, 228, 255, 0.5), 0 0 20px 0 rgba(0, 228, 255, 0.2)"
				},
				{
					"name": "Glow Brand Accent",
					"slug": "glow-brand-accent",
					"shadow": "0 0 10px 0 rgba(139, 247, 255, 0.7), 0 0 20px 0 rgba(139, 247, 255, 0.4)"
				},
				{
					"name": "Glow Brand Alt Accent",
					"slug": "glow-brand-alt-accent",
					"shadow": "0 0 10px 0 rgba(54, 111, 116, 0.5), 0 0 20px 0 rgba(54, 111, 116, 0.2)"
				},
				{
					"name": "No Shadow",
					"slug": "none",
					"shadow": "none"
				}
			]
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingSizes": [
				{
					"name": "Small",
					"size": "clamp(.5rem, 2.5vw, 1rem)",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "clamp(1.5rem, 4vw, 2rem)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "clamp(2rem, 5vw, 3rem)",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(3rem, 7vw, 5rem)",
					"slug": "x-large"
				},
				{
					"name": "2xl",
					"size": "clamp(4rem, 9vw, 7rem)",
					"slug": "xx-large"
				},
				{
					"name": "3xl",
					"size": "clamp(5rem, 12vw, 9rem)",
					"slug": "xxx-large"
				},
				{
					"name": "4xl",
					"size": "clamp(6rem, 14vw, 13rem)",
					"slug": "xxxx-large"
				}
			],
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			],
			"blockGap": true,
			"padding": true,
			"margin": true
		},
		"typography": {
			"dropCap": false,
			"defaultFontSizes": false,
			"fluid": true,
			"writingMode": true,
			"fontFamilies": [
				{
					"fontFamily": "Mona Sans Narrow, sans-serif",
					"name": "Mona Sans Narrow (Headings)",
					"slug": "mona-sans-narrow"
				},
				{
					"fontFamily": "Mona Sans, sans-serif",
					"name": "Mona Sans (Primary)",
					"slug": "mona-sans"
				},
				{
					"fontFamily": "monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"fluid": {
						"min": ".825rem",
						"max": ".95rem"
					},
					"size": ".95rem",
					"slug": "x-small",
					"name": "Extra Small"
				},
				{
					"fluid": {
						"min": ".9rem",
						"max": "1.05rem"
					},
					"size": "1.05rem",
					"slug": "small",
					"name": "Small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.165rem"
					},
					"size": "1.165rem",
					"slug": "base",
					"name": "Base"
				},
				{
					"fluid": {
						"min": "1.2rem",
						"max": "1.65rem"
					},
					"size": "1.65rem",
					"slug": "medium",
					"name": "Medium"
				},
				{
					"fluid": {
						"min": "1.5rem",
						"max": "2.75rem"
					},
					"size": "2.75rem",
					"slug": "large",
					"name": "Large"
				},
				{
					"fluid": {
						"min": "1.875rem",
						"max": "3.5rem"
					},
					"size": "3.5rem",
					"slug": "x-large",
					"name": "Extra Large"
				},
				{
					"fluid": {
						"min": "2.25rem",
						"max": "4.3875rem"
					},
					"size": "4.3875rem",
					"slug": "xx-large",
					"name": "Extra Extra Large"
				}
			],
			"lineHeight": true
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/code": {
				"border": {
					"radius": "5px",
					"width": "0px"
				},
				"color": {
					"background": "var:preset|color|border-contrast",
					"text": "var:preset|color|brand-accent"
				},
				"spacing": {
					"padding": {
						"top": "var:preset|spacing|medium",
						"right": "var:preset|spacing|medium",
						"bottom": "var:preset|spacing|medium",
						"left": "var:preset|spacing|medium"
					}
				},
				"typography": {
					"fontFamily": "var:preset|font-family|monospace",
					"fontSize": "var:preset|font-size|small"
				}
			},
			"core/button": {
				"border": {
					"radius": "4px",
					"width": "2px",
					"style": "solid",
					"color": "var:preset|color|brand-accent"
				},
				"color": {
					"background": "var:preset|color|brand",
					"text": "var:preset|color|contrast"
				},
				"spacing": {
					"padding": {
						"top": ".6em",
						"right": "1.5em",
						"bottom": ".6em",
						"left": "1.5em"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var:preset|color|brand-accent",
						"text": "var:preset|color|contrast"
					},
					"custom": {
						"shadow": "var:preset|shadow|glow-brand-accent"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var:preset|color|border-base"
				},
				"css": "hr { opacity: 0.5; }"
			},
			"core/pullquote": {
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var:preset|font-size|small"
						},
						"color": {
							"text": "var:preset|color|brand-alt-accent"
						}
					}
				},
				"border": {
					"color": "var:preset|color|brand",
					"top": {
						"style": "solid",
						"width": "5px"
					}
				},
				"spacing": {
					"padding": {
						"top": "0",
						"right": "0",
						"bottom": "0",
						"left": "0"
					}
				},
				"typography": {
					"lineHeight": "var:custom|line-height|body",
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "500"
				}
			},
			"core/quote": {
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var:preset|font-size|small"
						},
						"color": {
							"text": "var:preset|color|brand-alt-accent"
						}
					}
				},
				"css": "& :where(cite) { display: block }",
				"border": {
					"radius": "0",
					"style": "solid",
					"width": "0 0 0 5px !important",
					"color": "var:preset|color|brand"
				},
				"spacing": {
					"padding": {
						"left": "var:preset|spacing|large",
						"right": "var:preset|spacing|large"
					},
					"margin": {
						"left": "0"
					}
				},
				"typography": {
					"lineHeight": "var:custom|line-height|body",
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "500"
				}
			},
			"core/table": {
				"typography": {
					"fontSize": "var:preset|font-size|base"
				},
				"css": "th, td { border-color: var(--wp--preset--color--border-base) !important; }"
			},
			"core/list": {
				"color": {
					"text": "var:preset|color|base-accent"
				}
			},
			"core/heading": {
				"color": {
					"text": "var:preset|color|base-accent"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var:preset|font-size|large",
					"fontWeight": "700",
					"lineHeight": "var:custom|line-height|none"
				}
			},
			"core/site-tagline": {
				"color": {
					"text": "var:preset|color|brand-alt-accent"
				}
			},
			"core/navigation": {
				"typography": {
					"fontWeight": "500"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var:preset|color|base-accent"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							},
							"color": {
								"text": "var:preset|color|brand-accent"
							}
						}
					}
				}
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						"color": {
							"text": "var:preset|color|brand-alt-accent"
						}
					}
				}
			}
		},
		"color": {
			"background": "var:preset|color|base",
			"text": "var:preset|color|base-accent"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "4px",
					"width": "2px",
					"style": "solid",
					"color": "var:preset|color|brand-accent"
				},
				"color": {
					"background": "var:preset|color|brand",
					"text": "var:preset|color|contrast"
				},
				"spacing": {
					"padding": {
						"top": ".6em",
						"right": "1.5em",
						"bottom": ".6em",
						"left": "1.5em"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var:preset|color|brand-accent",
						"text": "var:preset|color|contrast"
					},
					"custom": {
						"shadow": "var:preset|shadow|glow-brand-accent"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var:preset|font-size|x-large",
					"lineHeight": "var:custom|line-height|snug",
					"fontWeight": "700"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var:preset|font-size|large",
					"lineHeight": "var:custom|line-height|snug",
					"fontWeight": "700"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "600"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var:preset|font-size|base",
					"fontWeight": "600"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "600"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var:preset|font-size|x-small",
					"fontWeight": "600"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|mona-sans-narrow",
					"fontWeight": "700",
					"lineHeight": "var:custom|line-height|snug"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|brand-alt-accent"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var:preset|color|brand-accent"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var:preset|color|base-accent"
				}
			}
		},
		"spacing": {
			"blockGap": "var:preset|spacing|medium",
			"padding": {
				"top": "0",
				"right": "var:preset|spacing|medium",
				"bottom": "0",
				"left": "var:preset|spacing|medium"
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|mona-sans",
			"fontSize": "var:preset|font-size|base",
			"fontWeight": "400",
			"lineHeight": "var:custom|line-height|body"
		}
	},
	"customTemplates": [
		{
			"name": "page-no-title",
			"title": "Page (Full Width, No Title)",
			"postTypes": [
				"page",
				"ollie_pattern",
				"post"
			]
		},
		{
			"name": "page-with-sidebar",
			"title": "Page (With Sidebar)",
			"postTypes": [
				"post",
				"page"
			]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "sidebar"
		}
	]
}
